{
  "manifest_version": 3,
  "name": "Prime Video Intro",
  "version": "2.0",
  "description": "Prime Video Intro Video when loading website",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.primevideo.com/*", "https://www.amazon.com/gp/video/*", "https://www.amazon.co.uk/gp/video/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["intro.mp4"],
      "matches": ["<all_urls>"]
    }
  ]
}